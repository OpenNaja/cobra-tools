        <field name="unk1_as_1" type="uint" />
        <field name="float11" type="float" />
        <field name="float12" type="float" />
        <field name="float13" type="float" />
        <field name="float14" type="float" />
        <field name="float15" type="float" />
        <field name="event_curve_clouds" type="Pointer" template="ZString"/>

        <field name="block1unk_as_1" type="uint" />
        <field name="block1_float1" type="float" />
        <field name="block1_float2" type="float" />
        <field name="block1_float3" type="float" />
