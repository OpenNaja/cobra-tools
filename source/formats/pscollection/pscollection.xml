<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fileformat>
<fileformat>

	<xi:include href="../ovl_base/ovl_base.xml" xmlns:xi="http://www.w3.org/2001/XInclude" xpointer="xpointer(*/*)" />

    <struct name="PscollectionRoot" inherit="MemStruct">
        <field name="prepared_statements" type="ArrayPointer" template="PreparedStatement" arg="count"/>
        <field name="count" type="uint64" />
    </struct>

    <struct name="PreparedStatement" inherit="MemStruct">
        <field name="args" type="ArrayPointer" template="Arg" arg="arg_count"/>
        <field name="arg_count" type="uint64" default="0" optional="True" />
        <field name="statement_name" type="Pointer" template="ZString"/>
        <field name="sql_query" type="Pointer" template="ZString"/>
    </struct>

    <struct name="Arg" inherit="MemStruct">
        <field name="u0" type="ubyte" default="0" optional="True" />
        <field name="argType" type="ubyte" />
        <field name="argIndex" type="ubyte" >one-based index</field>
        <field name="u1" type="ubyte" default="0" optional="True" />
        <field name="u2" type="uint" default="0" optional="True" />
        <field name="arg_name" type="Pointer" template="ZString"/> <!-- ? -->
        <field name="u4" type="uint64" default="0" optional="True" />
    </struct>

</fileformat>
