    <bitstruct name="HeaderFlags" numbytes="4" storage="uint">
        <bits name="Caps" numbits="1" default="1">Always 1.</bits>
        <bits name="Height" numbits="1" />
        <bits name="Width" numbits="1" />
        <bits name="Pitch" numbits="1" />
        <bits name="Reserved 1" numbits="8" />
        <bits name="Pixel Format" numbits="1" default="1">Always 1.</bits>
        <bits name="Reserved 2" numbits="4" />
        <bits name="Mipmap Count" numbits="1" />
        <bits name="Reserved 3" numbits="1" />
        <bits name="Linear Size" numbits="1" />
        <bits name="Reserved 4" numbits="3" />
        <bits name="Depth" numbits="1" />
    </bitstruct>

    <bitstruct name="PixelFormatFlags" numbytes="4" storage="uint">
        <bits name="Alpha Pixels" numbits="1" />
        <bits name="Alpha" numbits="1" />
        <bits name="FourCC" numbits="1">Set this option for compressed files. The pixel format FourCC determines the compression type.</bits>
        <bits name="Palette Indexed 4" numbits="1" />
        <bits name="Reserved 1" numbits="1" />
        <bits name="Palette Indexed 8" numbits="1" />
        <bits name="RGB" numbits="1">Set this option for uncompressed files.</bits>
        <bits name="Reserved 2" numbits="4" />
        <bits name="Palette Indexed 1" numbits="1" />
        <bits name="Palette Indexed 2" numbits="1" />
        <bits name="Reserved 3" numbits="2" />
        <bits name="Alpha Premult" numbits="1" />
        <bits name="Reserved 4" numbits="1" />
        <bits name="Luminance" numbits="1" />
        <bits name="Reserved 5" numbits="13" />
        <bits name="Normal" numbits="1" />
    </bitstruct>

    <bitstruct name="Caps1" numbytes="4" storage="uint">
        <bits name="Reserved 1" numbits="3" />
        <bits name="Complex" numbits="1" />
        <bits name="Reserved 2" numbits="8" />
        <bits name="Texture" numbits="1" default="1" />
        <bits name="Reserved 3" numbits="9" />
        <bits name="Mipmap" numbits="1" />
    </bitstruct>

    <bitstruct name="Caps2" numbytes="4" storage="uint" >
        <bits name="Reserved 1" numbits="9" />
        <bits name="Cubemap" numbits="1" />
        <bits name="Cubemap Pos X" numbits="1" />
        <bits name="Cubemap Neg X" numbits="1" />
        <bits name="Cubemap Pos Y" numbits="1" />
        <bits name="Cubemap Neg Y" numbits="1" />
        <bits name="Cubemap Pos Z" numbits="1" />
        <bits name="Cubemap Neg Z" numbits="1" />
        <bits name="Reserved 2" numbits="5" />
        <bits name="Volume" numbits="1" />
    </bitstruct>

    <!--
    ***************
    *** structs ***
    ***************
    -->

    <struct name="PixelFormat">
        <field name="Size" type="uint" default="32">Always 32.</field>
        <field name="Flags" type="PixelFormatFlags">Non-zero for DX9, zero for DX10.</field>
        <field name="FourCC" type="FourCC">Determines compression type. Zero means no compression.</field> 
        <field name="Bit Count" type="uint">For non-compressed types, this is either 24 or 32 depending on whether there is an alpha channel. For compressed types, this describes the number of bits per block, which can be either 256 or 512.</field>
        <field name="R Mask" type="uint">For non-compressed types, this determines the red mask. Usually 0x00FF0000. Is zero for compressed textures.</field>
        <field name="G Mask" type="uint">For non-compressed types, this determines
 the green mask. Usually 0x0000FF00. Is zero for compressed textures.</field>
        <field name="B Mask" type="uint">For non-compressed types, this determines
 the blue mask. Usually 0x00FF0000. Is zero for compressed textures.</field>
        <field name="A Mask" type="uint">For non-compressed types, this determines
 the alpha mask. Usually 0x00000000 if there is no alpha channel and 0xFF000000 if there is an alpha channel. Is zero for compressed textures.</field>
    </struct>

    <struct name="DXT10Header" numbytes="20">
        <field name="DxgiFormat" type="DxgiFormat" />
        <field name="Resource Dimension" type="D3D10 RESOURCE DIMENSION" />
        <field name="Misc Flag" type="uint" />
        <field name="num_tiles" type="uint" default="1" />
        <field name="Misc Flag 2" type="uint" />
    </struct>

    <struct name="Header">
        <field name="Header String" type="FixedString" arg="4">DDS </field>
        <field name="Size" type="uint" default="124">Always 124 + 4 bytes for headerstring, header ends at 128.</field>
        <field name="Flags" type="HeaderFlags" />
        <field name="Height" type="uint">The texture height.</field>
        <field name="Width" type="uint">The texture width.</field>
        <field name="Linear Size" type="uint" />
        <field name="Depth" type="uint" default="1"/>
        <field name="Mipmap Count" type="uint" />
        <field name="Reserved 1" type="uint" arr1="11" />
        <field name="Pixel Format" type="PixelFormat" />
        <field name="Caps 1" type="Caps1" />
        <field name="Caps 2" type="Caps2" />
        <field name="Caps 3" type="uint" />
        <field name="Caps 4" type="uint" />
        <field name="Unused" type="uint" />
		
        <!-- DX10 extensions, only if FourCC == "DX10", does not count into 'size' -->
        <field name="DX10" type="DXT10Header" cond="Pixel Format\FourCC == 808540228" />
    </struct>

</fileformat>

