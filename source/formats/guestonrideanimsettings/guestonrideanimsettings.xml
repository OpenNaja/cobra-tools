<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fileformat>
<fileformat>

	<xi:include href="../ovl_base/ovl_base.xml" xmlns:xi="http://www.w3.org/2001/XInclude" xpointer="xpointer(*/*)" />

    <struct name="GuestOnRideAnimSettingsRoot" inherit="MemStruct">
        <field name="RideAnims" type="ArrayPointer" template="RideAnims" arg="count"/>
        <field name="count" type="uint64"/>
    </struct>

    <struct name="RideAnims" inherit="MemStruct">
        PC 136 bytes
        PZ 128 bytes
        PC2 64 bytes
        <field name="anim_name" type="Pointer" template="ZString"/>
        <field name="AM" type="Pointer" template="ZString" vercond="!is_PC2"/>
        <field name="AF" type="Pointer" template="ZString" vercond="!is_PC2"/>
        <field name="TM" type="Pointer" template="ZString" vercond="!is_PC2"/>
        <field name="TF" type="Pointer" template="ZString" vercond="!is_PC2"/>
        <field name="CF" type="Pointer" template="ZString" vercond="!is_PC2"/>
        <field name="CM" type="Pointer" template="ZString" vercond="!is_PC2"/>

        <field name="bools" type="ubyte" arr1="44" vercond="#PC#" />
        <field name="bools" type="ubyte" arr1="56" vercond="#PZ# #AND# !is_PC2" />
        <field name="bools" type="ubyte" arr1="32" vercond="is_PC2" />

        <field name="floats" type="float" arr1="5" vercond="#PC#"/>
        <field name="floats" type="float" arr1="4" vercond="#PZ# #AND# !is_PC2"/>
        <field name="floats" type="float" arr1="5" vercond="is_PC2"/> <!-- PC2 still 5 -->

        <field name="anims" type="ArrayPointer" template="AnimPair" arg="count" vercond="#PC#"/>

        <field name="count" type="uint64" vercond="#PC#"/>
        <field name="count" type="uint" vercond="is_PC2"/>

    </struct>

    <struct name="AnimPair" inherit="MemStruct">
        <field name="anim_name1" type="Pointer" template="ZString"/>
        <field name="anim_name2" type="Pointer" template="ZString"/>
    </struct>
</fileformat>
