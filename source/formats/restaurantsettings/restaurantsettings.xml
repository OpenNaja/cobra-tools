<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fileformat>
<fileformat>

	<xi:include href="../ovl_base/ovl_base.xml" xmlns:xi="http://www.w3.org/2001/XInclude" xpointer="xpointer(*/*)" />

    <struct name="RestaurantSettingsRoot" inherit="MemStruct">
        <field name="running_cost_base" type="uint64"/>
        <field name="unk_1" type="uint"/>
        <field name="unk_2" type="float"/>

        <field name="unk_3" type="float"/>
        <field name="unk_4" type="float"/>
        <field name="unk_5" type="float"/>
        <field name="unk_6" type="float"/>

        <field name="running_cost_per_extension" type="uint64"/>
        <field name="unk_8" type="uint"/>
        <field name="unk_9" type="float"/>

        <field name="perks" type="ArrayPointer" template="Perk" arg="count"/>
        <field name="count" type="uint64"/>
    </struct>

    <struct name="Perk" inherit="MemStruct">
        <field name="unk_0" type="uint64"/>
        <field name="building_cost" type="uint64"/>

        <field name="running_cost_base" type="uint64"/>
        <field name="running_cost_per_extension" type="uint64"/>

        <field name="unk_4" type="float"/>
        <field name="unk_5" type="float"/>

        <field name="label" type="Pointer" template="ZString"/>
        <field name="desc" type="Pointer" template="ZString"/>
        <field name="icon" type="Pointer" template="ZString"/>

        <field name="unk_6" type="float"/>
        <field name="appeal_adults" type="float"/>
        <field name="appeal_families" type="float"/>
        <field name="appeal_teenagers" type="float"/>
    </struct>

</fileformat>
