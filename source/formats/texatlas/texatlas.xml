<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fileformat>
<fileformat>

	<xi:include href="../ovl_base/ovl_base.xml" xmlns:xi="http://www.w3.org/2001/XInclude" xpointer="xpointer(*/*)" />

    <struct name="TexAtlasRoot" inherit="MemStruct">
        <field name="texture_list" type="ArrayPointer" template="TextureData" arg="texture_count"/>
        <field name="texture_count" type="uint64" />
        <field name="atlas_list" type="ArrayPointer" template="AtlasItem" arg="atlas_count"/>
        <field name="atlas_count" type="uint64" />
    </struct>

    <struct name="TextureData" inherit="MemStruct">
        <field name="atlas_name" type="Pointer" template="ZString"/>
        <field name="dependency_name" type="Pointer" >texture</field>
    </struct>    

    <struct name="AtlasItem" inherit="MemStruct">
        <field name="atlas_name" type="Pointer" template="ZString"/>
        <field name="startx" type="float" />
        <field name="starty" type="float" />
        <field name="endx" type="float" />
        <field name="endy" type="float" />
        <field name="layer" type="uint" />
        <field name="flags1" type="ushort" />
        <field name="flags2" type="ushort" />

    </struct>

</fileformat>
