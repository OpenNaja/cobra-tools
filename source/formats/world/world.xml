<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE fileformat>
<fileformat>

	<xi:include href="../ovl_base/ovl_base.xml" xmlns:xi="http://www.w3.org/2001/XInclude" xpointer="xpointer(*/*)" />

    <!-- Starting the review of this struct for PC2, the size is 80 bytes, need to check for missing/new elements. -->
    <struct name="WorldHeader" inherit="MemStruct">
        <!-- # NOTE, World struct in JWE has an extra pointer this import/export is not accounting for yet -->
        <field name="worldType" type="uint64"/>
        <field name="asset_pkgs" type="Pointer" template="ZStringList" arg="asset_pkgs_count"/>
        <field name="asset_pkgs_count" type="uint64"/>
        <field name="lua_name" type="Pointer" template="ZString"/>
        <field name="ptr_0" type="Pointer"/>
        <field name="ptr_1" type="Pointer"/>
        <field name="prefabs" type="Pointer" template="ZStringList" arg="prefabs_count"/>
        <field name="ptr_2" type="Pointer"/>
        <!-- # in JWE at offset 64 there is a ptr to the lighting options -->
        <field name="prefabs_count" type="uint64"/>
        <field name="ptr_3" type="Pointer"/>
    </struct>

    <!-- In PC2, Frontier introduced new files for World definition, including .worldsharedsettings and .worldartsettings
         removing some of the data form the .world mime.
    -->
    <struct name="WorldSharedSettingsHeader" inherit="MemStruct">
        <!-- From PC2 1.0.7.434846 32 bytes -->
        <field name="Biome Name" type="Pointer" template="ZString">Name of the .biome file</field> 
        <field name="World Type" type="uint64"/>
        <field name="Skirt Package Name" type="Pointer" template="ZString">.assetpkg file?</field>  <!-- I'm not sure since several things have this name -->
        <field name="unknown" type="uint64"/>
    </struct>

    <struct name="WorldArtSettingsHeader" inherit="MemStruct">
        <!-- From PC2 1.0.7.434846 112 bytes-->
        <field name="Size X" type="uint"/>
        <field name="Size Y" type="uint"/>
        <field name="Size Z" type="uint"/>
        <field name="unknown_1" type="uint"/>
        <field name="Skirt Resource Name" type="Pointer" template="ZString"/>
        <field name="Landscape Prefab Name" type="Pointer" template="ZString"/>
        <field name="Skirt Material Names" type="Pointer" template="ZStringList" arg="Skirt Material Names Count">List of fgms for the skirts</field>
        <field name="Skirt Material Names Count" type="uint64"/>
        <field name="Packages To Load" type="Pointer" template="ZStringList" arg="Packages To Load Count"/>
        <field name="Packages To Load Count" type="uint64"/>
        <field name="Height Map File Name" type="Pointer" template="ZString"/>
        <field name="unknown_3" type="uint64"/> <!-- this could be the Landscape prefab name -->
        <field name="Sea Prefab Name" type="Pointer" template="ZString"/>
        <field name="Colour Grade Name" type="Pointer" template="ZString">Name of the LUT file to load for this world.</field>
        <field name="Sun Horizon Rotation" type="float"/>
        <field name="Sun Zenith Rotation" type="float"/>
        <field name="Moon Horizon Rotation" type="float"/>
        <field name="Moon Zenith Rotation" type="float"/>
    </struct>

</fileformat>


